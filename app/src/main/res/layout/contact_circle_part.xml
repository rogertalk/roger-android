<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <!-- Photo -->

    <ImageView
        android:id="@+id/selectorView"
        android:layout_width="@dimen/contact_circle_diameter_outer"
        android:layout_height="@dimen/contact_circle_diameter_outer"
        android:layout_centerInParent="true"
        android:src="@drawable/circumference_white" />

    <ImageView
        android:id="@+id/greyCircumference"
        android:layout_width="@dimen/contact_circle_diameter"
        android:layout_height="@dimen/contact_circle_diameter"
        android:layout_centerInParent="true"
        android:importantForAccessibility="no"
        android:src="@drawable/circumference_contact_grey"/>

    <ImageView
        android:id="@+id/blackCircle"
        android:layout_width="@dimen/contact_circle_diameter"
        android:layout_height="@dimen/contact_circle_diameter"
        android:layout_centerInParent="true"
        android:importantForAccessibility="no"
        android:src="@drawable/circle_black"/>

    <ImageView
        android:id="@+id/contactPhoto"
        android:layout_width="@dimen/contact_circle_diameter"
        android:layout_height="@dimen/contact_circle_diameter"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/whiteOverlay"
        android:layout_width="@dimen/contact_circle_diameter"
        android:layout_height="@dimen/contact_circle_diameter"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:src="@drawable/circle_white_overlay"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/initials"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:textAllCaps="true"
        android:textColor="@color/opaque_white"
        android:importantForAccessibility="no"
        android:textSize="@dimen/font_xxxl"
        tools:text="P"/>


    <!-- Ripple and clickable area -->
    <ImageView
        android:id="@+id/contactCirclePart"
        android:layout_width="@dimen/contact_circle_diameter"
        android:layout_height="@dimen/contact_circle_diameter"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:background="@drawable/contact_ripple"
        android:importantForAccessibility="yes"
        android:clickable="true" />

    <!-- Blue Dot -->

    <ImageView
        android:id="@+id/blueDotBorder"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/unplayed_dot_border"
        android:layout_alignBottom="@id/selectorView"
        android:importantForAccessibility="no"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="56dp" />

    <ImageView
        android:id="@+id/blueDot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/unplayed_dot"
        android:layout_alignBottom="@id/selectorView"
        android:importantForAccessibility="no"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="59dp" />


</RelativeLayout>