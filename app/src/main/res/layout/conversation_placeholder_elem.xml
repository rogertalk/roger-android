<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/placeholderParent"
    android:importantForAccessibility="yes"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:clipChildren="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/placeholderSelectorView"
            android:layout_width="@dimen/contact_circle_diameter_outer"
            android:layout_height="@dimen/contact_circle_diameter_outer"
            android:importantForAccessibility="no"
            android:layout_centerInParent="true"
            android:src="@drawable/circle_light_grey" />

        <ImageView
            android:id="@+id/emojiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/family"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/circle_white"
            android:layout_alignBottom="@id/placeholderSelectorView"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="54dp" />


        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:importantForAccessibility="no"
            android:src="@drawable/circumference_contact_grey"
            android:layout_alignBottom="@id/placeholderSelectorView"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="54dp" />

        <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/placeholderSelectorView"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="61dp"
            android:importantForAccessibility="no"
            android:maxLines="1"
            android:textColor="@color/s_medium_grey"
            android:textSize="@dimen/font_m"
            tools:ignore="HardcodedText" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingTop="1dp">

        <TextView
            android:id="@+id/placeholderLabel"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-1dp"
            android:maxLines="1"
            android:importantForAccessibility="no"
            android:textColor="@color/s_medium_grey"
            android:textSize="@dimen/font_m"
            tools:text="Placeholder" />

    </LinearLayout>

</LinearLayout>