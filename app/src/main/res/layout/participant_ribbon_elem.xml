<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/black_50"
    android:importantForAccessibility="noHideDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mrPeeAvatar"
        android:layout_width="@dimen/ribbon_participant_diameter"
        android:layout_height="@dimen/ribbon_participant_diameter"
        android:layout_centerInParent="true"
        android:src="@drawable/pee" />

    <ImageView
        android:id="@+id/contactPhoto"
        android:layout_width="@dimen/ribbon_participant_diameter"
        android:layout_height="@dimen/ribbon_participant_diameter"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/circleCenterLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/opaque_white"
        android:textSize="@dimen/font_s"
        tools:text="P" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/circleCenterIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/opaque_white"
        android:textSize="@dimen/font_s"
        tools:text="*" />


    <ImageView
        android:id="@+id/whiteCircle"
        android:layout_width="@dimen/ribbon_participant_diameter"
        android:layout_height="@dimen/ribbon_participant_diameter"
        android:importantForAccessibility="no"
        android:layout_centerInParent="true"
        android:src="@drawable/circle_white_25" />

    <View
        android:id="@+id/extraSpacing"
        android:layout_width="5dp"
        android:layout_height="10dp"
        android:layout_toRightOf="@id/whiteCircle" />

</RelativeLayout>